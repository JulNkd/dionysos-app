<%= simple_form_for(event) do |f| %>
    <%= f.input :title %>
    <%= f.input :category %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file %>
    <%= f.input :start_date, label: 'Sélectionnez la date et le lieu de votre évènement', as: :string, input_html: { class: "datepicker"} %>
    <%= f.submit %>
  <% end %>
