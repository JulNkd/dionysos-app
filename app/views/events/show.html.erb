<div class="container">
  <h2><%= @event.title %></h2>
  <p><%= @event.address %></p>
  <p><%= @event.category %></p>
  <p><%= @event.description %></p>
  <%= cl_image_tag @event.photo.key, width: 400, height: 300, crop: :fill %>
  <p>Date de début : <%= @event.start_date %></p>
  <p>Date de fin : <%= @event.end_date %></p>
  <%= link_to "Modifier l'événement", edit_event_path(@event.id) %>
  <%= link_to "Voir l'album de l'évenement", photos_event_path(@event.id) %>
  <%= link_to "Ajouter une photo à l'album", new_event_album_path(@event.id) %>
</div>
